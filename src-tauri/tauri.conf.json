{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Community Agent Bridge",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://login.microsoftonline.com/*",
          "https://*.microsoftonline.com/*",
          "https://api.powerplatform.com/*",
          "https://*.api.powerplatform.com/*",
          "https://*.powerapps.com/*",
          "https://directline.botframework.com/*",
          "https://*.botframework.com/*",
          "https://*.environment.api.powerplatform.com/*",
          "https://*.services.ai.azure.com/*",
          "https://*.cognitiveservices.azure.com/*",
          "https://*.openai.azure.com/*",
          "https://*.tts.speech.microsoft.com/*",
          "https://*.stt.speech.microsoft.com/*",
          "https://*.speech.microsoft.com/*",
          "https://*.communication.azure.com/*",
          "https://*.skype.com/*",
          "https://*.teams.microsoft.com/*",
          "https://*.trouter.io/*",
          "https://*.trouter.skype.com/*",
          "https://turn.azure.com/*",
          "https://*.turn.azure.com/*",
          "https://*.azureedge.net/*",
          "https://*.microsoft.com/*",
          "https://ai.azure.com/*",
          "https://*.ai.azure.com/*",
          "https://*.azure.com/*",
          "https://*.blob.core.windows.net/*",
          "https://*.table.core.windows.net/*",
          "https://*.queue.core.windows.net/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.communityagentbridge.app",
      "icon": []
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https: wss: ws:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob:; media-src 'self' blob:;"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Community Agent Bridge",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
